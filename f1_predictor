        "np.random.seed(42)\n",
        "\n",
        "# Define F1 teams by era with realistic performance evolution\n",
        "teams_by_era = {\n",
        "    1990: ['McLaren', 'Ferrari', 'Williams', 'Benetton', 'Tyrrell', 'Lotus', 'Arrows', 'Brabham', 'Minardi', 'Osella'],\n",
